<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryLogin</item>
    </style>

    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.Button" parent="@android:style/Widget.Button"/>
    <style name="Widget.Button.Transparent">
        <item name="android:background">@null</item>    <!-- Se anula la propiedad con @null, o bien, no se define -->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">10dp</item>   <!-- Hay que tener especial cuidado con los márgenes dentro de un estilo porque podrían descuadrar los elementos al posicionar de nuevo elementos ya posicionados (los estilos siempre se aplican al final) -->
    </style>

    <style name="LoginTheme.EditText" parent="LoginTheme">
        <item name="android:padding">10dp</item>
    </style>
<!--
    <style name="Widget.Checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:checkedTextViewStyle">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:checkboxStyle">@style/Widget.AppCompat.CompoundButton.CheckBox</item>
    </style>
-->
</resources>
